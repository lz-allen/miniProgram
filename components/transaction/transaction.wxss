/* components/transaction/transaction.wxss */

.transaction {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
}

.transaction .content {
  width: 60%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #fff;
  font-size: 26rpx;
}

.transaction .content .top {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}

.transaction .content .body {
  text-align: center;
  padding: 30rpx 0;
}

.transaction .content .body image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.transaction .content .price {
  margin: 20rpx 0;
  font-size: 50rpx;
  font-weight: bolder;
}
