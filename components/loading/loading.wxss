/* components/loading/loading.wxss */
.loading{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 666;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center
}
.loading .img{
  position: relative;
  padding: 25rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 5px;
}
.loading image {
  width: 200rpx;
  height: 200rpx;
}
.loading text{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top:190rpx;
  font-size: 28rpx;
  color: #fff;

}