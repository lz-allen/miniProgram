/* pages/mine/mine.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 0;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
}

.info {
  margin-top: 40rpx;
  background-color: #fff;
}

.item {
  display: flex;
  font-size: 30rpx;
  align-items: center;
  margin: 40rpx 0;
}

.item image {
  width: 50rpx;
  height: 50rpx;
}

.item text {
  flex: 1;
  margin-left: 30rpx;
}

.item button {
  background: transparent;
  border: none;
  font-size: 30rpx;
  display: block;
  margin: 0 0 0 30rpx;
  text-align: left;
  padding: 0;
  flex: 1;
}
