<!--pages/mine/mine.wxml-->
<view class="mine">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class='info'>
    <view class='container'>
      <navigator url="/pages/publishList/publishList">
        <view class='item'>
          <image src='/assets/image/publish.png'></image>
          <text>我发布的</text>
          <image src='/assets/image/forward.png'></image>
        </view>
      </navigator>
      <navigator url="/pages/buyList/buyList">
        <view class='item'>
          <image src='/assets/image/buy.png'></image>
          <text>我买到的</text>
          <image src='/assets/image/forward.png'></image>
        </view>
      </navigator>
      <navigator url="/pages/sellList/sellList">
        <view class='item'>
          <image src='/assets/image/sell.png'></image>
          <text>我卖出的</text>
          <image src='/assets/image/forward.png'></image>
        </view>
      </navigator>
      <navigator url='/pages/myInfo/myInfo'>
        <view class='item'>
          <image src='/assets/image/info.png'></image>
          <text>我的资料</text>
          <image src='/assets/image/forward.png'></image>
        </view>
      </navigator>
      <view class='item' bindtap=''>
        <image src='/assets/image/share.png'></image>
        <button open-type='share' plain="{{true}}">分享程序</button>
        <image src='/assets/image/forward.png'></image>
      </view>
      <navigator url="/pages/aboutUs/aboutUs">
        <view class='item'>
          <image src='/assets/image/about.png'></image>
          <text>关于程序</text>
          <image src='/assets/image/forward.png'></image>
        </view>
      </navigator>
    </view>
  </view>
</view>