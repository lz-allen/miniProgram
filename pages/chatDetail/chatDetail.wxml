<!--pages/chatDetail/chatDetail.wxml-->
<view class='chatDetail'>
  <view class='top'>
    <view class='container content'>
      <image src="{{pImg}}"></image>
      <view class='right'>
        <view class='price'>¥{{price}}</view>
        <text>了解情况</text>
      </view>
    </view>
  </view>
  <view class='list'>
    <view class='item' wx:for="{{list}}" wx:key="{{item}}">
      <view class="{{ item.left ? 'left' : 'right'}}">
        <image src='{{ item.left ?item.avatarUrl : myAvatarUrl}}'></image>
        <view class='text'>
          <text>{{item.text}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class='foot'>
    <input type='text' placeholder='聊天内容' bindinput="getInputVal"></input>
    <button bindtap='sendMessage'>发 送</button>
  </view>
</view>