/**index.wxss**/
page{
  padding-bottom: 100rpx;
}
.banner .swiper {
  width: 100%;
  height: 150px;
}

.banner .swiper-item image {
  width: 100%;
}

.auth {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tab {
  display: flex;
  background-color: #fff;
  justify-content: space-around;
  flex-wrap: wrap; 
  font-size: 28rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.tab .tab-item {
  width: 200rpx;
  margin: 30rpx 0;
  text-align: center;
  box-sizing: border-box;
}

.tab .tab-item image {
  display: block;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.list {
  background-color: #fff;
  margin-top: 20rpx;
}

.list .title {
  font-size: 26rpx;
  color: #f8883c;
  padding-bottom: 20rpx;
}

.list .title text {
  float: right;
  font-size: 24rpx;
  color: #99a;
}

.list .item {
  position: relative;
  margin-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #ddd;
}

.list .item:last-of-type {
  border: none;
}

.list .item .avatar {
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.list .item .info {
  padding-left: 120rpx;
  font-size: 26rpx;
  color: #333;
}

.list .item .info .name {
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
}

.list .item .info .name text {
  float: right;
  color: #f90;
  font-weight: normal;
  font-size: 28rpx;
  margin-right: 40rpx;
}

.list .item .info .subInfo {
  font-size: 22rpx;
  color: #99a;
}

.list .item .info .desc {
  padding-top: 10rpx;
}

.list .item .info .imgList {
  margin-top: 20rpx;
}

.list .item .info .imgList image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  border-radius: 5rpx;
}

